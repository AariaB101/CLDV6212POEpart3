@model CLDV6212PoePart3.Models.Cart

@{
    ViewData["Title"] = "My Cart";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">🛒 My Shopping Cart</h2>

    @if (Model == null || Model.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-info text-center">
            Your cart is empty.
            <a asp-controller="Products" asp-action="Index" class="alert-link">Continue shopping</a>.
        </div>
    }
    else
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Cart Details</h5>
                <p><strong>Cart ID:</strong> @Model.CartId</p>
                <p><strong>Status:</strong> <span class="badge bg-warning text-dark">@Model.Status</span></p>
                <p><strong>Created:</strong> @Model.CreatedAt.ToString("f")</p>
            </div>
        </div>

        <table class="table table-bordered table-striped align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th style="width: 160px;">Quantity</th>
                    <th style="width: 150px;">Unit Price</th>
                    <th style="width: 150px;">Total</th>
                    <th style="width: 130px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <strong>@(item.Product?.ProductName ?? "Unknown Product")</strong><br />
                            <small class="text-muted">@item.Product?.Description</small>
                        </td>
                        <td>
                            <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                <input type="number" name="quantity" value="@item.Quantity"
                                       class="form-control form-control-sm text-center"
                                       min="1" style="width: 80px;" />
                                <button type="submit" class="btn btn-sm btn-primary ms-2">
                                    Update
                                </button>
                            </form>
                        </td>
                        <td>@(item.Product?.Price != null ? item.Product.Price.Value.ToString("C") : "N/A")</td>
                        <td>@((item.Product?.Price ?? 0) * item.Quantity).ToString("C")</td>
                        <td>
                            <form asp-action="RemoveItem" method="post">
                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-4">
            <h4>
                <strong>Total:</strong>
                @Model.Items.Sum(i => (i.Product?.Price ?? 0) * i.Quantity).ToString("C")
            </h4>

            <form asp-action="PlaceOrder" method="post" class="mt-3">
                <input type="hidden" name="cartId" value="@Model.CartId" />
                <button type="submit" class="btn btn-success btn-lg">
                    Place Order
                </button>
            </form>
        </div>
    }
</div>
